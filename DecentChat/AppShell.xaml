<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DecentChat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DecentChat"
    Shell.FlyoutBehavior="Disabled"
    Title="DecentChat">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Start Node"
        ContentTemplate="{DataTemplate local:my_Start_node}"
        Route="my_Start_node" />
    <ShellContent
        Title="Chats"
        ContentTemplate="{DataTemplate local:Chats}"
        Route="Chats" />
    <ShellContent
        Title="Join Node"
        ContentTemplate="{DataTemplate local:Join_exsiting_node}"
        Route="Join_exsiting_node" />
    <ShellContent
        Title="Set next node"
        ContentTemplate="{DataTemplate local:Set_next_nodes}"
        Route="Set_next_nodes" />
</Shell>
