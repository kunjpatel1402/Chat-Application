<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DecentChat.Set_next_nodes"
             Title="Getting to know you neighbours....">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <StackLayout Orientation="Horizontal">
                <Label Text="User-name" VerticalOptions="Center" />
                <Entry x:Name="node_name_text" Text="1" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Hash-value" VerticalOptions="Center" />
                <Entry x:Name="hash_val_text" Text="11" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="IP-address" VerticalOptions="Center" />
                <Entry x:Name="ip_address_text" Text="127.0.0.1" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Port" VerticalOptions="Center" />
                <Entry x:Name="port_text" Text="5000" />
            </StackLayout>

            <Button x:Name = "next_node_submit_button"
            Text = "Submit"
            Clicked = "submit_node_info"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>