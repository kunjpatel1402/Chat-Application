<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DecentChat.Join_exsiting_node"
             Title="Getting to know your friends...">
    <ScrollView>
        <VerticalStackLayout
     Padding="30,0"
     Spacing="25">
            <StackLayout Orientation="Horizontal">
                <Label Text="IP-address" VerticalOptions="Center" />
                <Entry x:Name="ip_address_text" Text="127.0.0.1" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Port" VerticalOptions="Center" />
                <Entry x:Name="port_text" Text="5000" />
            </StackLayout>

            <Button x:Name = "ip_address_and_port_submit_button"
         Text = "Submit"
         Clicked = "submit_ip_address_and_port_info"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>