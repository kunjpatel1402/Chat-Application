<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DecentChat.my_Start_node"
             Title="Start Node">
    <ScrollView>
        <Grid>
            <Frame WidthRequest="400" HeightRequest="450" CornerRadius="10" Padding="5" BorderColor="Transparent" BackgroundColor="#2e2e2e">
                <VerticalStackLayout Spacing="25" Padding="10" VerticalOptions="Center">
                    <Label Text="{Binding Details}" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" />
                    <Button x:Name="startNodeButton" Text="Start Node" Clicked="Start_node_func" WidthRequest="150" BackgroundColor="#9880e5" TextColor="White"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
